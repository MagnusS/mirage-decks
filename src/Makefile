LIBS   = -pkgs lwt.syntax,cohttp.mirage-unix,cstruct,io-page-unix,lwt,mirage-console-unix,mirage-types,mirage.types-unix
PKGS   = cohttp crunch cstruct lwt mirage-console-unix mirage-types mirage-unix
SYNTAX = -tags "syntax(camlp4o)"

FLAGS  = -cflag -g -lflags -g,-linkpkg

BUILD  = ocamlbuild -classic-display -use-ocamlfind $(LIBS) $(SYNTAX) $(FLAGS)
OPAM   = opam

.PHONY: all prepare clean
all: build

prepare:
	$(OPAM) install $(PKGS)

main.native:
	$(BUILD) main.native

main.native.o:
	$(BUILD) main.native.o

build: main.native
	ln -nfs _build/main.native mir-main

run: build
	$(SUDO) ./mir-main
clean:
	ocamlbuild -clean
